doctype 5
html
  include includes/head
  body
    form.form-horizontal(id="aForm", method="POST", action="postForm")
      fieldset
        h1 for Author Dashboard
        .control-group
          legend Name of author
          label.control-label(for="fName") Full Name
          .controls
            input(type='text', name="fName", required)
        .control-group
          legend Book Info
          label.control-label(for="title") Title
          .controls
            input(type='text', name="title", required)
        .control-group
          label.control-label(for="desc") Description
          .controls
            textarea.input-xxlarge(rows='10', name="desc", required)
        .control-group
          label.control-label(for="imgURL") Image URL
          .controls
            input(type='text', name="imgURL", required)
        .control-group
          label.control-label(for="genre") Genre
          .controls
            input(type='text', name="genre", required)
        a.btn.btn-info(href="/authorList") Show List
        input.btn.btn-primary(type='submit', value="Submit")
    include includes/footer
